<Window x:Class="MovieInfo.AddTheaterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieInfo"
        mc:Ignorable="d"
        Title="AddTheaterWindow" Height="155.689" Width="300">
    <Grid>
        <TextBox x:Name="name" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Width="272"/>
        <TextBox x:Name="address" HorizontalAlignment="Left" Height="23" Margin="10,38,0,0" TextWrapping="Wrap" Text="Address" VerticalAlignment="Top" Width="272"/>
        <Button Content="Add Theater" HorizontalAlignment="Left" Margin="98,95,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <TextBox x:Name="screens" HorizontalAlignment="Left" Height="23" Margin="10,66,0,0" TextWrapping="Wrap" Text="Number of Screens" VerticalAlignment="Top" Width="272"/>

    </Grid>
</Window>
