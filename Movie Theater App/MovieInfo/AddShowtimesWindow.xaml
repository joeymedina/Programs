<Window x:Class="MovieInfo.AddShowtimesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieInfo"
        mc:Ignorable="d"
        Title="AddShowtimesWindow" Height="412.605" Width="300">
    <Grid>
        <ListBox x:Name="movies" HorizontalAlignment="Left" Height="100" Margin="10,13,0,0" VerticalAlignment="Top" Width="272"/>
        <ListBox x:Name="theaters" HorizontalAlignment="Left" Height="100" Margin="10,115,0,0" VerticalAlignment="Top" Width="272" SelectionChanged="theaters_SelectionChanged"/>
        <ListBox x:Name="screens" HorizontalAlignment="Left" Height="100" Margin="10,220,0,0" VerticalAlignment="Top" Width="272"/>
        <TextBox x:Name="starttime" HorizontalAlignment="Left" Height="23" Margin="10,325,0,0" TextWrapping="Wrap" Text="Start Time (MM/DD/YYYY HH:MM)" VerticalAlignment="Top" Width="272"/>
        <Button Content="Add Showtime" HorizontalAlignment="Left" Margin="81,353,0,0" VerticalAlignment="Top" Width="107" Click="Button_Click"/>

    </Grid>
</Window>
