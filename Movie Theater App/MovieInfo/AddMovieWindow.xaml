<Window x:Class="MovieInfo.AddMovieWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieInfo"
        mc:Ignorable="d"
        Title="AddMovieWindow" Height="259.664" Width="300">
    <Grid>
        <TextBox x:Name="name" HorizontalAlignment="Left" Height="25" Margin="10,10,0,0" TextWrapping="Wrap" Text="Movie Title" VerticalAlignment="Top" Width="272"/>
        <TextBox x:Name="runtime" HorizontalAlignment="Left" Height="23" Margin="10,40,0,0" TextWrapping="Wrap" Text="Runtime" VerticalAlignment="Top" Width="272"/>
        <Button Content="Add Movie" HorizontalAlignment="Left" Margin="102,201,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <ListBox x:Name="directors" HorizontalAlignment="Left" Height="100" Margin="10,96,0,0" VerticalAlignment="Top" Width="272"/>
        <TextBox x:Name="genre" HorizontalAlignment="Left" Height="23" Margin="10,68,0,0" TextWrapping="Wrap" Text="Genre" VerticalAlignment="Top" Width="272"/>

    </Grid>
</Window>
